---
export interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  twitterCard?: string;
}

const {
  title,
  description,
  canonical = Astro.url,
  ogImage = "/images/og-default.jpg",
  ogType = "website",
  twitterCard = "summary_large_image"
} = Astro.props;

const siteTitle = "Elite Cuts Barbershop";
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
---

<!-- Primary Meta Tags -->
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<meta name="keywords" content="barbershop, haircut, men's grooming, fade, beard trim, styling, local barber" />
<meta name="author" content="Elite Cuts Barbershop" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Canonical URL -->
<link rel="canonical" href={canonical} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(ogImage, Astro.url)} />
<meta property="og:site_name" content={siteTitle} />

<!-- Twitter -->
<meta property="twitter:card" content={twitterCard} />
<meta property="twitter:url" content={canonical} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(ogImage, Astro.url)} />

<!-- Local Business Schema -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "HairSalon",
  "name": "Elite Cuts Barbershop",
