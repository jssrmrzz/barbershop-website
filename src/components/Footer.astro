---
import { Phone, MapPin, Clock, Facebook, Instagram, Twitter } from 'lucide-astro';
---

<footer class="bg-primary text-background">
  <div class="container-custom">
    <div class="py-12">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- About Section -->
        <div class="lg:col-span-2">
          <h3 class="text-2xl font-bold text-secondary mb-4">Elite Cuts Barbershop</h3>
          <p class="text-gray-300 mb-6 leading-relaxed">
            Experience premium barbering services in the heart of downtown. Our skilled barbers combine traditional techniques with modern styles to give you the perfect cut every time.
          </p>
          
          <!-- Social Media -->
          <div class="flex space-x-4">
            <a href="#" class="text-gray-300 hover:text-secondary transition-colors" aria-label="Facebook">
              <Facebook size={20} />
            </a>
            <a href="#" class="text-gray-300 hover:text-secondary transition-colors" aria-label="Instagram">
              <Instagram size={20} />
            </a>
            <a href="#" class="text-gray-300 hover:text-secondary transition-colors" aria-label="Twitter">
              <Twitter size={20} />
            </a>
          </div>
        </div>

        <!-- Contact Info -->
        <div>
          <h4 class="text-lg font-semibold text-secondary mb-4">Contact Info</h4>
          <div class="space-y-3">
            <div class="flex items-start space-x-3">
              <Phone size={16} class="text-secondary mt-1 flex-shrink-0" />
              <div>
                <a href="tel:+1-555-CUTS-NOW" class="text-gray-300 hover:text-secondary transition-colors">
                  (555) CUTS-NOW
                </a>
              </div>
            </div>
            
            <div class="flex items-start space-x-3">
              <MapPin size={16} class="text-secondary mt-1 flex-shrink-0" />
              <div class="text-gray-300">
                <p>123 Main Street</p>
                <p>Downtown, CA 12345</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Hours -->
        <div>
          <h4 class="text-lg font-semibold text-secondary mb-4">Hours</h4>
          <div class="space-y-2 text-gray-300">
            <div class="flex items-center space-x-3">
              <Clock size={16} class="text-secondary flex-shrink-0" />
              <div class="text-sm">
                <div class="space-y-1">
                  <p><span class="font-medium">Mon-Fri:</span> 9AM - 7PM</p>
                  <p><span class="font-medium">Saturday:</span> 8AM - 6PM</p>
                  <p><span class="font-medium">Sunday:</span> 10AM - 4PM</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Book Now CTA -->
          <div class="mt-6">
            <a href="#booking" class="btn-secondary text-sm">
              Book Appointment
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        <div class="text-gray-400 text-sm">
          <p>&copy; 2024 Elite Cuts Barbershop. All rights reserved.</p>
        </div>
        
        <div class="flex items-center space-x-6 text-sm">
          <a href="/privacy" class="text-gray-400 hover:text-secondary transition-colors">
            Privacy Policy
          </a>
          <a href="/terms" class="text-gray-400 hover:text-secondary transition-colors">
            Terms of Service
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>