---
import Layout from '../layouts/Layout.astro';
import ServicesSection from '../components/ServicesSection.astro';
import { Calendar, Star, Award } from 'lucide-astro';
---

<Layout 
  title="Services - Elite Cuts Barbershop"
  description="Explore our full range of professional barbering services including haircuts, fades, beard trims, and hot towel shaves. Quality grooming by master barbers."
>
  <!-- Page Hero -->
  <section class="bg-gradient-to-br from-primary to-primary/90 text-background section-spacing">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Our <span class="text-secondary">Services</span>
      </h1>
      <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
        From classic cuts to modern styles, our master barbers deliver exceptional grooming services tailored to your individual needs and preferences.
      </p>
      
      <!-- Quick Stats -->
      <div class="flex flex-wrap justify-center gap-8 mb-8">
        <div class="flex items-center space-x-2">
          <Star size={20} class="text-secondary" />
          <span>5.0 Rating</span>
        </div>
        <div class="flex items-center space-x-2">
          <Award size={20} class="text-secondary" />
          <span>15+ Years Experience</span>
        </div>
        <div class="flex items-center space-x-2">
          <Calendar size={20} class="text-secondary" />
          <span>Same Day Booking</span>
        </div>
      </div>

      <a href="#services" class="btn-primary text-lg px-8 py-4">
        View All Services
      </a>
    </div>
  </section>

  <!-- Services Section -->
  <div id="services">
    <ServicesSection showAll={true} title="Complete Service Menu" />
  </div>

  <!-- Additional Services -->
  <section class="section-spacing bg-background-off">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-primary mb-4">Additional Services</h2>
        <p class="text-lg text-text-light max-w-2xl mx-auto">
          Beyond our core services, we offer specialized treatments to complete your grooming experience.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Hair Wash & Style -->
        <div class="bg-background rounded-xl p-6 shadow-lg border border-neutral">
          <h3 class="text-xl font-semibold text-primary mb-3">Hair Wash & Style</h3>
          <p class="text-text-light mb-4">
            Premium shampoo and conditioning treatment followed by professional styling.
          </p>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-secondary">$10</span>
            <span class="text-sm text-text-light">15 min</span>
          </div>
        </div>

        <!-- Mustache Trim -->
        <div class="bg-background rounded-xl p-6 shadow-lg border border-neutral">
          <h3 class="text-xl font-semibold text-primary mb-3">Mustache Trim</h3>
          <p class="text-text-light mb-4">
            Precise mustache trimming and shaping to complement your facial features.
          </p>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-secondary">$8</span>
            <span class="text-sm text-text-light">10 min</span>
          </div>
        </div>

        <!-- Eyebrow Trim -->
        <div class="bg-background rounded-xl p-6 shadow-lg border border-neutral">
          <h3 class="text-xl font-semibold text-primary mb-3">Eyebrow Trim</h3>
          <p class="text-text-light mb-4">
            Professional eyebrow trimming and grooming for a polished appearance.
          </p>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-secondary">$5</span>
            <span class="text-sm text-text-light">10 min</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Packages -->
  <section class="section-spacing bg-primary text-background">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary mb-4">Service Packages</h2>
        <p class="text-gray-300 max-w-2xl mx-auto">
          Save with our popular service combinations designed to give you the complete grooming experience.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- The Full Service -->
        <div class="bg-black/20 rounded-2xl p-8 border-2 border-secondary">
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-secondary mb-2">The Full Service</h3>
            <p class="text-gray-300">Complete grooming experience</p>
          </div>
          
          <ul class="space-y-3 mb-8">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Haircut or Fade
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Beard Trim & Shape
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Hot Towel Treatment
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Hair Wash & Style
            </li>
          </ul>

          <div class="text-center">
            <div class="text-3xl font-bold text-secondary mb-2">$55</div>
            <div class="text-sm text-gray-300 line-through mb-4">Regular: $70</div>
            <button class="btn-primary w-full">Book Package</button>
          </div>
        </div>

        <!-- The Classic -->
        <div class="bg-black/20 rounded-2xl p-8">
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-secondary mb-2">The Classic</h3>
            <p class="text-gray-300">Essential grooming combo</p>
          </div>
          
          <ul class="space-y-3 mb-8">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Haircut
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Hair Wash
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Basic Styling
            </li>
          </ul>

          <div class="text-center">
            <div class="text-3xl font-bold text-secondary mb-2">$30</div>
            <div class="text-sm text-gray-300 line-through mb-4">Regular: $35</div>
            <button class="btn-secondary bg-transparent border-2 border-background text-background hover:bg-background hover:text-primary w-full">Book Package</button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>