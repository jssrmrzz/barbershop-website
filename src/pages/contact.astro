---
import Layout from '../layouts/Layout.astro';
import { Phone, MapPin, Clock, Mail, Calendar, Navigation, Facebook, Instagram, Twitter } from 'lucide-astro';
---

<Layout 
  title="Contact Us - Elite Cuts Barbershop"
  description="Get in touch with Elite Cuts Barbershop. Visit us, call to book an appointment, or send us a message. Located in downtown with convenient hours."
>
  <!-- Page Hero -->
  <section class="bg-gradient-to-br from-primary to-primary/90 text-background py-16">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Contact <span class="text-secondary">Us</span>
      </h1>
      <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
        Ready for your next cut? Get in touch with us today to book your appointment or ask any questions you might have.
      </p>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="section-spacing bg-background">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Details -->
        <div>
          <h2 class="text-3xl font-bold text-primary mb-8">Get In Touch</h2>
          
          <div class="space-y-6">
            <!-- Phone -->
            <div class="flex items-start space-x-4 p-4 bg-background-off rounded-lg">
              <div class="bg-secondary/10 rounded-full p-3">
                <Phone size={24} class="text-secondary" />
              </div>
              <div>
                <h3 class="font-semibold text-primary mb-1">Phone</h3>
                <a href="tel:+1-555-CUTS-NOW" class="text-lg text-text hover:text-secondary transition-colors">
                  (555) CUTS-NOW
                </a>
                <p class="text-sm text-text-light">Call to book your appointment</p>
              </div>
            </div>

            <!-- Address -->
            <div class="flex items-start space-x-4 p-4 bg-background-off rounded-lg">
              <div class="bg-secondary/10 rounded-full p-3">
                <MapPin size={24} class="text-secondary" />
              </div>
              <div>
                <h3 class="font-semibold text-primary mb-1">Address</h3>
                <p class="text-lg text-text">123 Main Street</p>
                <p class="text-lg text-text">Downtown, CA 12345</p>
                <a href="https://maps.google.com" target="_blank" class="text-sm text-secondary hover:underline">
                  Get Directions â†’
                </a>
              </div>
            </div>

            <!-- Hours -->
            <div class="flex items-start space-x-4 p-4 bg-background-off rounded-lg">
              <div class="bg-secondary/10 rounded-full p-3">
                <Clock size={24} class="text-secondary" />
              </div>
              <div>
                <h3 class="font-semibold text-primary mb-2">Hours</h3>
                <div class="space-y-1 text-text">
                  <div class="flex justify-between">
                    <span>Mon - Fri:</span>
                    <span>9:00 AM - 7:00 PM</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Saturday:</span>
                    <span>8:00 AM - 6:00 PM</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Sunday:</span>
                    <span>10:00 AM - 4:00 PM</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start space-x-4 p-4 bg-background-off rounded-lg">
              <div class="bg-secondary/10 rounded-full p-3">
                <Mail size={24} class="text-secondary" />
              </div>
              <div>
                <h3 class="font-semibold text-primary mb-1">Email</h3>
                <a href="mailto:info@elitecutsbarbershop.com" class="text-lg text-text hover:text-secondary transition-colors">
                  info@elitecutsbarbershop.com
                </a>
                <p class="text-sm text-text-light">For general inquiries</p>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="mt-8">
            <h3 class="font-semibold text-primary mb-4">Follow Us</h3>
            <div class="flex space-x-4">
              <a href="#" class="bg-secondary/10 rounded-full p-3 text-secondary hover:bg-secondary hover:text-background transition-colors">
                <Facebook size={20} />
              </a>
              <a href="#" class="bg-secondary/10 rounded-full p-3 text-secondary hover:bg-secondary hover:text-background transition-colors">
                <Instagram size={20} />
              </a>
              <a href="#" class="bg-secondary/10 rounded-full p-3 text-secondary hover:bg-secondary hover:text-background transition-colors">
                <Twitter size={20} />
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-background-off rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-primary mb-6">Send Us a Message</h2>
          
          <form class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label for="firstName" class="block text-sm font-medium text-primary mb-2">First Name</label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName" 
                  required
                  class="w-full px-4 py-3 border border-neutral rounded-lg focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-colors"
                  placeholder="John"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-primary mb-2">Last Name</label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName" 
                  required
                  class="w-full px-4 py-3 border border-neutral rounded-lg focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-colors"
                  placeholder="Doe"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-primary mb-2">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-neutral rounded-lg focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-colors"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-primary mb-2">Phone (Optional)</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-neutral rounded-lg focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-colors"
                placeholder="(555) 123-4567"
              />
            </div>

            <div>
              <label for="service" class="block text-sm font-medium text-primary mb-2">Service Interest</label>
              <select 
                id="service" 
                name="service"
                class="w-full px-4 py-3 border border-neutral rounded-lg focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-colors"
              >
                <option value="">Select a service...</option>
                <option value="haircut">Classic Haircut</option>
                <option value="fade">Modern Fade</option>
                <option value="beard">Beard Trim</option>
                <option value="shave">Hot Towel Shave</option>
                <option value="package">Service Package</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-primary mb-2">Message</label>
              <textarea 
                id="message" 
                name="message" 
                rows="4"
                required
                class="w-full px-4 py-3 border border-neutral rounded-lg focus:ring-2 focus:ring-secondary/20 focus:border-secondary transition-colors resize-none"
                placeholder="Tell us about your preferred appointment time, specific requests, or any questions you have..."
              ></textarea>
            </div>

            <button type="submit" class="btn-primary w-full text-lg py-4">
              Send Message
            </button>
          </form>

          <p class="text-sm text-text-light mt-4 text-center">
            We'll get back to you within 24 hours. For immediate booking, please call us directly.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="section-spacing bg-primary">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary mb-4">Find Us</h2>
        <p class="text-gray-300">
          Located in the heart of downtown with convenient parking and easy access.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Map Placeholder -->
        <div class="lg:col-span-2">
          <div class="aspect-[16/10] bg-gray-600 rounded-2xl flex items-center justify-center">
            <div class="text-center text-gray-300">
              <MapPin size={64} class="mx-auto mb-4" />
              <h3 class="text-xl font-bold mb-2">Interactive Map</h3>
              <p>Google Maps integration would go here</p>
              <a href="https://maps.google.com" target="_blank" class="btn-secondary mt-4 inline-block">
                Open in Google Maps
              </a>
            </div>
          </div>
        </div>

        <!-- Location Details -->
        <div class="bg-black/20 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-secondary mb-6">Location Details</h3>
          
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <Navigation size={20} class="text-secondary mt-1 flex-shrink-0" />
              <div>
                <p class="font-medium">Easy to Find</p>
                <p class="text-sm text-gray-300">Corner of Main Street and 1st Avenue</p>
              </div>
            </div>

            <div class="flex items-start space-x-3">
              <MapPin size={20} class="text-secondary mt-1 flex-shrink-0" />
              <div>
                <p class="font-medium">Parking Available</p>
                <p class="text-sm text-gray-300">Free street parking and nearby garage</p>
              </div>
            </div>

            <div class="flex items-start space-x-3">
              <Calendar size={20} class="text-secondary mt-1 flex-shrink-0" />
              <div>
                <p class="font-medium">Walk-ins Welcome</p>
                <p class="text-sm text-gray-300">Or book ahead for guaranteed service</p>
              </div>
            </div>
          </div>

          <div class="mt-8 pt-6 border-t border-gray-600">
            <a href="tel:+1-555-CUTS-NOW" class="btn-primary w-full text-center">
              Call to Book: (555) CUTS-NOW
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>